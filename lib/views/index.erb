<br>

<h1>Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#id</th>
      <th scope="col">Title</th>
      <th scope="col">Completed</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.done? ? "&#9989" : "&#10060" %></td>
        <td>
          <a href="/tasks/<%= task.id %>">Show</a> |
          <a href="/tasks/<%= task.id %>/edit">Edit</a> |
          <a href="/tasks/<%= task.id %>/delete">Delete</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
